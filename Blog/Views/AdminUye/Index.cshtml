@model IEnumerable<Blog.Models.Uye>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/Admin/Index/">Admin Menu</a>
        </li>
        <li class="breadcrumb-item active">Admin Kullanıcılar</li>
    </ol>
    <!-- Example DataTables Card-->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-users"></i> Admin Kullanıcılar

        </div>

        <div class="card-body">
            <p>@Html.ActionLink("Üye Ekle", "Create", null, new { @class = "btn btn-primary" })</p>
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Yetki.Yetki1)</th>
                            <th>@Html.DisplayNameFor(model => model.KullaniciAdi)</th>
                            <th>@Html.DisplayNameFor(model => model.AdSoyad)</th>
                            <th>@Html.DisplayNameFor(model => model.Sifre)</th>
                            <th>@Html.DisplayNameFor(model => model.Email)</th>
                            <th>@Html.DisplayNameFor(model => model.Foto)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- foreach dönecek -->
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Yetki.Yetki1)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.KullaniciAdi)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AdSoyad)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Sifre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    <img src="@item.Foto" width="75" height="75">
                                </td>
                                <td>
                                    @Html.ActionLink("Düzenle", "Edit", new { id = item.UyeId }, new { @class = "btn btn-warning btn-xs" })<br />
                                    @Html.ActionLink("Detay", "Details", new { id = item.UyeId }, new { @class = "btn btn-primary btn-xs" })<br />
                                    @Html.ActionLink("Sil", "Delete", new { id = item.UyeId }, new { @class = "btn btn-danger btn-xs" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer small text-muted">@DateTime.Now</div>
    </div>
</div>




