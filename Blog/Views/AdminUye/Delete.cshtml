@model Blog.Models.Uye

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container-fluid">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/Admin/Index/">Admin Menu</a>
            </li>
            <li class="breadcrumb-item active">
                <a href="/AdminUye/Index/">Admin Kullanıcılar</a>
            </li>
            <li class="breadcrumb-item active">Admin Kullanıcı Sil</li>
        </ol>

        <div class="card mb-3">
            <div class="card-header">
                <i class="fa fa-users"></i> Kullanıcı Sil
            </div>

            <div class="card-body">

                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Yetki.Yetki1)</th>
                                <th>@Html.DisplayNameFor(model => model.KullaniciAdi)</th>
                                <th>@Html.DisplayNameFor(model => model.Email)</th>
                                <th>@Html.DisplayNameFor(model => model.Sifre)</th>
                                <th>@Html.DisplayNameFor(model => model.AdSoyad)</th>
                                <th>@Html.DisplayNameFor(model => model.Foto)</th>
                            </tr>
                        </thead>

                        <tbody>
                            <tr>
                                <td>
                                    @Html.DisplayFor(model => model.Yetki.Yetki1)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.KullaniciAdi)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Sifre)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.AdSoyad)
                                </td>
                                <td>
                                    <img src="@Model.Foto" alt="Alternate Text" class="img-responsive" width="75" height="75" />
                                </td>
                            </tr>
                        </tbody>

                    </table>
                    <div class="form-actions no-color">

                        <div class="alert alert-danger alert-dismissable my-4">
                            <a class="panel-close close" data-dismiss="alert">×</a>
                            <i class="fa fa-warning"></i>
                            <b>@Html.DisplayFor(model => model.KullaniciAdi)</b>  adlı kullanıllıcıyı silmek üzeresiniz?
                        </div>

                        <p><input type="submit" value=" Sil " class="btn btn-danger" /></p>

                        @Html.ActionLink("Geri Dön", "Index")
                    </div>
                </div>
            </div>
            <div class="card-footer small text-muted">@DateTime.Now</div>
        </div>
    </div>
}