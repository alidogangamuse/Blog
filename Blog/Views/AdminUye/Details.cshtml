@model Blog.Models.Uye

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/Admin/Index/">Admin Menu</a>
        </li>
        <li class="breadcrumb-item active">
            <a href="/AdminUye/Index/">Admin Kullanıcılar</a>
        </li>
        <li class="breadcrumb-item active">Admin Kullanıcı Detayları</li>
    </ol>

    <!-- Example DataTables Card-->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-newspaper-o"></i> Kullanıcı Detay
        </div>
        <div class="card-body">
            <div class="table-responsive">


                <div class="col-md-12 my-4">
                    <div class="text-center">
                        <img src="@Model.Foto" class="rounded-circle" width="150" height="150" alt="@Model.AdSoyad">
                    </div>
                </div>

                <div class="col-md-12 personal-info text-md-center ">
                    <h1>@Html.DisplayFor(model => model.Yetki.Yetki1) Bilgileri</h1>
                    <br />
                    <form class="form-horizontal" role="form">

                        <div class="form-group">
                            <h5>@Html.DisplayFor(model => model.Yetki.Yetki1) Adı-Soyadı</h5>
                            <div class="col-lg-12">
                                @Html.DisplayFor(model => model.AdSoyad)
                            </div>
                        </div>
                        <div class="form-group">
                            <h5>E-Mail</h5>
                            <div class="col-lg-12">
                                @Html.DisplayFor(model => model.Email)
                            </div>
                        </div>
                        <div class="form-group">
                            <h5>Kullanıcı Adı</h5>
                            <div class="col-lg-12">
                                @Html.DisplayFor(model => model.KullaniciAdi)
                            </div>
                        </div>
                        <div class="form-group">
                            <h5>Kullanıcı Şifresi</h5>
                            <div class="col-lg-12">
                                @Html.DisplayFor(model => model.Sifre)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label"></label>
                            <div class="col-md-12">
                                <a href="/AdminUye/Edit/@Model.UyeId"><input type="button" class="btn btn-primary" value="Düzenle"></a>

                            </div>
                        </div>
                    </form>
                </div>

            </div>
            <div>
                @Html.ActionLink("Geri Dön", "Index")
            </div>

        </div>
    </div>
    <div class="card-footer small text-muted">@DateTime.Now</div>
</div>