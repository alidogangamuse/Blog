@model Blog.Models.Uye

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


@using (Html.BeginForm("Edit", "AdminUye", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="container-fluid">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/Admin/Index/">Admin Menu</a>
            </li>
            <li class="breadcrumb-item active">
                <a href="/AdminUye/Index/">Admin Kullanıcılar</a>
            </li>
            <li class="breadcrumb-item active">Admin Kullanıcı Düzenle</li>
        </ol>
        <!-- Example DataTables Card-->
        <div class="card mb-3">
            <div class="card-header">
                <i class="fa fa-users"></i> Kullanıcı Düzenle
            </div>
            <div class="card-body">
                <div class="table-responsive">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.UyeId)

                    <div class="form-group">
                        <b>@Html.LabelFor(model => model.KullaniciAdi, htmlAttributes: new { @class = "control-label col-md-2" })</b>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.KullaniciAdi, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.KullaniciAdi, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <b>@Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })</b>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @type = "Email", @required = "" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <b>@Html.LabelFor(model => model.Sifre, htmlAttributes: new { @class = "control-label col-md-2" })</b>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Sifre, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Sifre, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <b>@Html.LabelFor(model => model.AdSoyad, htmlAttributes: new { @class = "control-label col-md-2" })</b>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.AdSoyad, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.AdSoyad, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="">
                        @*@Html.Label("Eski Foto", htmlAttributes: new { @class = "control-label col-md-2" })*@
                        <div class="col-md-10">
                            <img width="75" src="@Model.Foto" alt="Alternate Text" />
                            <input type="file" name="Foto" id="Foto" value="" accept=".jpg, .png, .gif, .JPEG, .jpeg" class="form-control" />
                            @Html.ValidationMessageFor(model => model.Foto, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    @*<div class="form-group">
                        <b>
                            @Html.LabelFor(model => model.Foto, new { @class = "control-label col-md-2" })
                        </b>
                        <div class="col-md-10">
                            <input type="file" name="Foto" id="Foto" accept=".jpg, .png, .gif, .JPEG, .jpeg" class="form-control" />
                            @Html.ValidationMessageFor(model => model.Foto, "", new { @class = "text-danger" })
                        </div>
                    </div>*@
                    <div class="form-group">
                        <b>@Html.LabelFor(model => model.YetkiId, "YetkiId", htmlAttributes: new { @class = "control-label col-md-2" })</b>
                        <div class="col-md-10">
                            @Html.DropDownList("YetkiId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.YetkiId, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Güncelle" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
                <div>
                    @Html.ActionLink("Geri Dön", "Index")
                </div>


            </div>
        </div>
        <div class="card-footer small text-muted">@DateTime.Now</div>
    </div>

}
