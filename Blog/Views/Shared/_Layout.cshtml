<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Blog Sitem</title>
    <!-- Bootstrap core CSS -->
    <link href="~/Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="~/Content/css/blog-home.css" rel="stylesheet">
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />

    <!-- Bootstrap core JavaScript -->
    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>


</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/Home/Index/">Blog Sitem</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Index/">
                            AnaSayfa
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Hakkimizda/">Hakkımızda</a>
                    </li>
                    @*<li class="nav-item">
                            <a class="nav-link" href="#">Services</a>
                        </li>*@
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Iletisim/">İletişim</a>
                    </li>
                    <!--dropdown ile logout tasarımı-->
                </ul>
                <ul class="navbar-nav ml-auto">
                    @if (Session["uyeid"] != null)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span><img src="@Session["profilFoto"]" class="rounded-circle" width="25" height="25" /></span> Merhaba @Session["kullaniciadi"].ToString()
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">

                                <a class="dropdown-item" href="/Uye/Index/@Session["uyeid"]"> @Session["kullaniciadi"].ToString()</a>
                                @if (Convert.ToInt32(Session["yetkiid"]) == 1)
                                {
                                    <a class="dropdown-item" target="_blank" href="/Admin/Index/"> Admin Paneli</a>
                                }
                                <div class="dropdown-divider"></div>
                                <a class=" fa fa-sign-out dropdown-item active" href="/Uye/Logout/"> Çıkış</a>
                            </div>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Uye/Login/"><span class="fa fa-user-circle-o"></span> Giriş</a>
                        </li>
                        @*<li class="nav-item">
                                <a class="nav-link" href="/Uye/Create/">Kayıt OL</a>
                            </li>*@
                    }
                </ul>
            </div>
        </div>
    </nav>
    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <!-- Blog Entries Column -->

            <div class="col-md-8">
                @RenderBody()
            </div>

            <!-- Sidebar Widgets Column -->
            <div class="col-md-4">
                <!-- Search Widget -->
                <div class="card my-4">
                    @Html.Partial("BlogAraPartial")
                </div>
                <!-- Categories Widget -->
                <div class="card my-4">
                    @{
                        Html.RenderAction("KategoriPartial", "Home");
                    }
                </div>
                <!-- Side Widget -->
                <div class="card my-4">
                    @{
                        Html.RenderAction("PopulerMakaleler", "Home");
                    }
                </div>
                <div class="card my-4">
                    @{
                        Html.RenderAction("SonYorumlar", "Home");
                    }
                </div>
            </div>
        </div>
        <!-- /.row -->

    </div>
    <!-- /.container -->
    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; Your Website 2018</p>
        </div>
        <!-- /.container -->
    </footer>
    <!-- Footer -->
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"></script>




</body>
</html>
