@model IEnumerable<Blog.Models.Kategori>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/Admin/Index/">Admin Menu</a>
        </li>
        <li class="breadcrumb-item active">Admin Kategoriler</li>
    </ol>
    <!-- Example DataTables Card-->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i> Admin Kategoriler
        </div>

        <div class="card-body">
            <p>@Html.ActionLink("Yeni Kategori Oluştur", "Create", null, new { @class = "btn btn-primary" })</p>
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.KategoriAdi)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- foreach dönecek -->
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.KategoriAdi)
                                </td>
                                <td>
                                    @Html.ActionLink("Düzenle", "Edit", new { id = item.KategoriId }, new { @class = "btn btn-warning btn-xs" })
                                    @Html.ActionLink("Detay", "Details", new { id = item.KategoriId }, new { @class = "btn btn-primary btn-xs" })
                                    @Html.ActionLink("Sil", "Delete", new { id = item.KategoriId }, new { @class = "btn btn-danger btn-xs" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer small text-muted">@DateTime.Now</div>
    </div>
</div>
