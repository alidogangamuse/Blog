@model IEnumerable<Blog.Models.Makale>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="container-fluid">

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/Admin/Index/">Admin Menu</a>
        </li>
        <li class="breadcrumb-item active">Admin Makaleler</li>
    </ol>

    <!-- Example DataTables Card-->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-newspaper-o"></i> Admin Makaleler
        </div>

        <div class="card-body">
            <p>@Html.ActionLink("Yeni Makale Oluştur", "Create", null, new { @class = "btn btn-primary" })</p>
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Kategori.KategoriAdi)</th>
                            <th>@Html.DisplayNameFor(model => model.Baslik)</th>
                            <th>@Html.DisplayNameFor(model => model.Icerik)</th>
                            <th>@Html.DisplayNameFor(model => model.Foto)</th>
                            <th>@Html.DisplayNameFor(model => model.Tarih)</th>
                            <th>@Html.DisplayNameFor(model => model.UyeId)</th>
                            <th>@Html.DisplayNameFor(model => model.Okunma)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Kategori.KategoriAdi)</th>
                            <th>@Html.DisplayNameFor(model => model.Baslik)</th>
                            <th>@Html.DisplayNameFor(model => model.Icerik)</th>
                            <th>@Html.DisplayNameFor(model => model.Foto)</th>
                            <th>@Html.DisplayNameFor(model => model.Tarih)</th>
                            <th>@Html.DisplayNameFor(model => model.UyeId)</th>
                            <th>@Html.DisplayNameFor(model => model.Okunma)</th>
                            <th></th>
                        </tr>
                    </tfoot>
                    <tbody>
                        <!-- foreach dönecek -->
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Kategori.KategoriAdi)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Baslik)
                                </td>
                                <td>
                                    @if (item.Icerik.Length > 50)
                                    {
                                        <p>@Html.Raw(item.Icerik.Substring(0, 50)) ...</p>
                                    }
                                    else
                                    {
                                        <p>@Html.Raw(item.Icerik) </p>
                                    }
                                    @*@Html.DisplayFor(modelItem => item.Icerik)*@
                                </td>
                                <td>
                                    <img src="@item.Foto" width="75" height="75">
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tarih)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UyeId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Okunma)
                                </td>
                                <td>
                                    @Html.ActionLink("Düzenle", "Edit", new { id = item.MakaleId }, new { @class = "btn btn-warning btn-xs" })<br />
                                    @Html.ActionLink("Detay", "Details", new { id = item.MakaleId }, new { @class = "btn btn-primary btn-xs" })<br />
                                    @Html.ActionLink("Sil", "Delete", new { id = item.MakaleId }, new { @class = "btn btn-danger btn-xs" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer small text-muted">@DateTime.Now</div>
    </div>
</div>


