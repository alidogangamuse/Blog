@model Blog.Models.Iletisim

@{
    ViewBag.Title = "Iletisim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    @if (ViewData["result"] != null)
    {
        ViewData["result"] = true;
    }
    @using (Html.BeginForm())
    {
        <div class="row">
            <div class="col-md-12 my-4 col-md-offset-3">
                <div class="card">
                    <form class="form-horizontal" action="" method="post">
                        <h3 class="text-center">Bize Ulaşın</h3>

                        <div class="form-group">
                            <b>
                                @Html.LabelFor(model => model.AdSoyad, new { @class = "control-label col-md-2" })
                            </b>
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.AdSoyad, new { @class = "form-control", @required = "" })
                                @Html.ValidationMessageFor(model => model.AdSoyad, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <b>
                                @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
                            </b>
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @required = "" })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <b>
                                @Html.LabelFor(model => model.Konu, new { @class = "control-label col-md-2" })
                            </b>
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.Konu, new { @class = "form-control", @required = "" })
                                @Html.ValidationMessageFor(model => model.Konu, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <b>
                                @Html.LabelFor(model => model.Mesaj, new { @class = "control-label col-md-2" })
                            </b>
                            <div class="col-md-12">
                                @Html.TextAreaFor(model => model.Mesaj, new { @class = "form-control", @required = "" })
                                @Html.ValidationMessageFor(model => model.Mesaj, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-primary btn-lg"><span class="fa fa-send"></span> Gönder</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

