@model IEnumerable<Blog.Models.Yorum>
@{ 
    Layout = null;
}

<h5 class="card-header"><span class="fa fa-comment"></span> Son Yapılan Yorumlar</h5>
<div class="card-body">
    <ul class="list-group list-group-flush">
        @foreach (var item in Model)
        {
            <li class="list-group-item">@item.Icerik  <a href="/Home/MakaleDetay/@item.MakaleId">(@item.Makale.Baslik)</a></li>
        }
    </ul>
</div>
