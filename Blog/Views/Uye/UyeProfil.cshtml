@model Blog.Models.Uye

@{
    ViewBag.Title = "UyeProfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container my-4">
    <h1>Yazar Profili</h1>
    <hr>
    <div class="row">

        <div class="col-md-12">
            <div class="text-center">
                <img src="@Model.Foto" class="rounded-circle" width="200" height="200" alt="@Model.AdSoyad">
                <p></p>

            </div>
        </div>

        <!-- edit form column -->

        <div class="col-md-12 personal-info text-md-center ">
            <h1>Kişisel Bilgiler</h1>
            <br />
            <form class="form-horizontal" role="form">

                <div class="form-group">
                    <h5>Kullanıcı Adı</h5>
                    <div class="col-lg-12">
                        @Html.DisplayFor(model => model.KullaniciAdi)
                    </div>
                </div>
                <div class="form-group">
                    <h5>E-Mail</h5>
                    <div class="col-lg-12">
                        @Html.DisplayFor(model => model.Email)
                    </div>
                </div>
                <br />
                <hr />
                <div class="form-group my-5">
                    <div class="col-lg-12">
                        <div class="list-group">
                            <h3 class="list-group-item list-group-item-action active">
                                Yayınlanan Yazıları
                            </h3>
                            @foreach (var item in Model.Makales.OrderByDescending(m => m.MakaleId))
                            {

                                <a class="list-group-item list-group-item-action" href="/Home/MakaleDetay/@item.MakaleId">@item.Baslik</a>

                            }

                        </div>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>








