@model Blog.Models.Uye

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container my-4">
    <h1>@Html.DisplayFor(model => model.Yetki.Yetki1) Profili</h1>
    <hr>
    <div class="row">

        <div class="col-md-12 my-4">
            <div class="text-center">
                <img src="@Model.Foto" class="rounded-circle" width="200" height="200" alt="@Model.AdSoyad">
            </div>
        </div>

        <!-- edit form column -->

        <div class="col-md-12 personal-info text-md-center ">
            <h1>Kişisel Bilgiler</h1>
            <br />
            <form class="form-horizontal" role="form">

                <div class="form-group">
                    <h5>Üyenin Adı-Soyadı</h5>
                    <div class="col-lg-12">
                        @Html.DisplayFor(model => model.AdSoyad)
                    </div>
                </div>
                <div class="form-group">
                    <h5>E-Mail</h5>
                    <div class="col-lg-12">
                        @Html.DisplayFor(model => model.Email)
                    </div>
                </div>
                <div class="form-group">
                    <h5>Kullanıcı Adı</h5>
                    <div class="col-lg-12">
                        @Html.DisplayFor(model => model.KullaniciAdi)
                    </div>
                </div>
                <div class="form-group">
                    <h5>Kullanıcı Şifresi</h5>
                    <div class="col-lg-12">
                        @Html.DisplayFor(model => model.Sifre)
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label"></label>
                    <div class="col-md-12">
                        <a href="/Uye/Edit/@Model.UyeId"><input type="button" class="btn btn-primary" value="Düzenle"></a>

                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<hr />
