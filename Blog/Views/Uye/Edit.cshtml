@model Blog.Models.Uye

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm("Edit", "Uye", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="container my-4">
        <h1>Profilini Düzenle</h1>
        <hr>
        <div class="row">
            <!-- left column -->
            <div class="col-md-5">
                <div class="text-center">
                    <img src="@Model.Foto" class="rounded-circle" alt="@Model.AdSoyad" width="175" height="175">
                    <br />
                    <br />
                    <input type="file" name="Foto" id="Foto" value="" accept=".jpg, .png, .gif, .JPEG, .jpeg" class="form-control" />
                    @Html.ValidationMessageFor(model => model.Foto, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- edit form column -->
            <div class="col-md-7 personal-info">
                <h3>Kullanıcı Bilgileri</h3>

                <form class="form-horizontal" role="form">

                    <div class="form-group">
                        @Html.LabelFor(model => model.AdSoyad, htmlAttributes: new { @class = "control-label col-lg-3" })
                        <div class="col-lg-8">
                            @Html.EditorFor(model => model.AdSoyad, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.AdSoyad, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-lg-3" })
                        <div class="col-lg-8">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.KullaniciAdi, htmlAttributes: new { @class = "control-label col-lg-3" })
                        <div class="col-lg-8">
                            @Html.EditorFor(model => model.KullaniciAdi, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.KullaniciAdi, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Şifre:</label>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Sifre, new { htmlAttributes = new { @class = "form-control", placeholder = "Password", @type = "password" } })
                            @Html.ValidationMessageFor(model => model.Sifre, "", new { @class = "text-danger" })

                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label"></label>
                        <div class="col-md-8">
                            <input type="submit" class="btn btn-primary" value="Güncelle">
                            <span></span>
                            <input type="reset" class="btn btn-default" value="Cancel">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

}