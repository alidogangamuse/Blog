@model Blog.Models.Yorum

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}





@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/Admin/Index/">Admin Menu</a>
        </li>
        <li class="breadcrumb-item active">
            <a href="/AdminYorum/Index/">Admin Yorumlar</a>
        </li>
        <li class="breadcrumb-item active">Admin Yorum Düzenle</li>
    </ol>
    <!-- Example DataTables Card-->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-comments"></i> Yorum Düzenle
        </div>
        <div class="card-body">
            <div class="table-responsive">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.YorumId)

                <div class="form-group">
                    @*@Html.LabelFor(model => model.Icerik, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <div class="col-md-10">
                        <h5>Yorum</h5>
                        @Html.EditorFor(model => model.Icerik, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Icerik, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @*@Html.LabelFor(model => model.UyeId, "UyeId", htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <div class="col-md-10">
                        <h5>Üye Kullanıcı Adı</h5>
                        @Html.DropDownList("UyeId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UyeId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @*@Html.LabelFor(model => model.MakaleId, "MakaleId", htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <div class="col-md-10">
                        <h5>Makale Adı</h5>
                        @Html.DropDownList("MakaleId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MakaleId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @*@Html.LabelFor(model => model.Tarih, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <div class="col-md-10">
                        <h5>Tarih</h5>
                        @Html.EditorFor(model => model.Tarih, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Tarih, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Güncelle" class="btn btn-primary" />
                    </div>
                </div>
            </div>
            <div>
                @Html.ActionLink("Geri Dön", "Index")
            </div>
        </div>
    </div>
    <div class="card-footer small text-muted">@DateTime.Now</div>
</div>
}

